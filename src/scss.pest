char = {
    ASCII_ALPHANUMERIC | "_" | "-"
}
class = {
    "." ~ (ASCII_ALPHA | "_") ~ char*
}
id = {
    "#" ~ (ASCII_ALPHA | "_") ~ char*
}
identifier = {
    (ASCII_ALPHA | "_") ~ char*
}
selector_part = {
    id | class | identifier
}
selector = {
    selector_part ~ (selector_separator ~ selector_part)*
}

selector_separator = _{ " " | "\t" | NEWLINE }
